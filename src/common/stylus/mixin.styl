border-1px($color)
  position: relative
  &:affter
    display :block
    position :absolute
    left :0
    bottom :0
    width :100%
    border-top :1px solid $color
    content :' '

bg-image($url)
  background-image :url($url + "@2x.png")  // 一般情况下用2x.png的图片
  @media (-webkit-min-device-pixel-ratic:3),(min-device-pixel-ratio:3)  // 如果屏大于XXx就用3x.png的图片
    background-image :url($url + "@3x.png")
